include 'player.lua'

UserInterface = {
  Color=1
}

function UserInterface:New()
	local obj = {
	
	}
	setmetatable(obj, self)
	self.__index = self
	return obj
	
end

function UserInterface:Draw()
  --
  rectfill(
    player.x + 240, -- largura
    player.y - 100, -- altura
    player.x + 350, -- largura
    player.y + 140, -- altura
    self.Color + 3
  )

  -- borda
  rect(
    player.x - 110, 
    player.y - 100, 
    player.x + 230, 
    player.y + 140, 
    self.Color
  )
  
end
