--[[pod_format="raw",created="2025-06-28 16:17:54",modified="2025-06-28 22:35:16",revision=86]]
-- Definindo a "classe" Player
Player={}

function Player:New(x, y)
	local obj = {
		x = x or 120,
		y = y or 120,
      SpriteId=16,
      IsFlipped=false		
	}
	setmetatable(obj, self)
	self.__index = self
	return obj
end

-- Desenhando em tela
function Player:Draw()
  spr(self.SpriteId, self.x, self.y, self.IsFlipped)
  camera(self.x - 120, self.y - 120)
end

