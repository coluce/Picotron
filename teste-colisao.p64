--[[pod_format="raw",created="2025-06-27 22:08:24",modified="2025-07-06 18:16:56",revision=919]]
include 'player.lua'
include 'user_interface.lua'
include 'mapa.lua'

function _init()
  player = Player:New()
  interface = UserInterface:New()
  mapa = Mapa:New()
end

function _update()
  local vPosX = player.x
  local vPosY = player.y
  
  player.DirectionUp = false 
  player.DirectionDown = false 
  player.DirectionLeft = false 
  player.DirectionRigth = false 

  if btn(0) then -- esquerda
    vPosX -= player.Speed
	 player.DirectionLeft = true
	 player.DirectionLast = 0
  end
  
  if btn(1) then -- direita
    vPosX += player.Speed
	 player.DirectionRigth = true
	 player.DirectionLast = 1	 
  end
  
  if btn(2) then -- cima
    vPosY -= player.Speed
	 player.DirectionUp = true
	 player.DirectionLast = 2	 
  end
  
  if btn(3) then -- baixo
    vPosY += player.Speed
	 player.DirectionDown = true
	 player.DirectionLast = 3	 
  end
  
  mapa:InCollision(vPosX, vPosY) 
   
  if mapa.CanUp or mapa.CanDown then
    player.x = vPosX
  end
 
  if mapa.CanLeft or mapa.CanRigth then 
    player.y = vPosY     
  end  
 
end

function _draw()
  -- limpar a tela
  cls() 
  -- desenhar mapa  
  mapa:Draw()
  -- desenhar jogador
  player:Draw()
  -- desenhar gui
  interface:Draw()  
end
