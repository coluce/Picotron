--[[pod_format="raw",created="2025-12-14 18:20:21",modified="2025-12-17 03:26:02",revision=76]]
function _init()

  --music(0)
  sfx(1)

  plane={
    spr_id=2,
    speed=1,
    x=240,
    y=240
  }

  cloud = {
    spr_id=4,
    speed=1,
    x=0,
    y=0
  }
  reset_cloud()
  
end

function _update()
  if btn(1) then -- direira
    plane.x = plane.x + plane.speed
  elseif btn(0) then -- esquerda
    plane.x = plane.x - plane.speed
  elseif btn(2) then -- cima
    plane.y = plane.y - 1
  elseif btn(3) then -- baixo
    plane.y = plane.y + 1  
  end 
  
  cloud.y = cloud.y + cloud.speed
  
  if cloud.y > 250 then
    reset_cloud()
  end
  
end

function _draw()
  cls(28)
  map(1)
  spr(plane.spr_id, plane.x, plane.y)
  spr(cloud.spr_id, cloud.x, cloud.y)
end

function reset_cloud()
  cloud.spr_id = rnd({3, 4, 5})
  cloud.speed = rnd({0.5,1, 1.5, 2})
  cloud.x = rnd(480)
  cloud.y = -8  
end
