--[[pod_format="raw",created="2025-12-14 18:20:21",modified="2025-12-14 18:52:37",revision=35]]
function _init()
  plane_x=240
  plane_y=240
  plane_spr=2

  cloud_spr=4    
  reset_cloud()
  
  --palt(28, true)
  
end

function _update()
  if btn(1) then -- direira
    plane_x=plane_x+1
  elseif btn(0) then -- esquerda
    plane_x=plane_x-1
  end
  
  cloud_y = cloud_y + 1
  
  if cloud_y > 250 then
    reset_cloud()
  end
  
end

function _draw()
  cls(28)
  map(1)
  spr(plane_spr, plane_x, plane_y)
  spr(cloud_spr, cloud_x, cloud_y)
end

function reset_cloud()
  if cloud_spr == 3 then
    cloud_spr=4
  else
    cloud_spr=3  
  end
  cloud_x=rnd(480)
  cloud_y=-8
end
