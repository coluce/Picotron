--[[pod_format="raw",created="2025-06-27 22:08:24",modified="2025-06-29 00:23:04",revision=274]]
include 'player.lua'
include 'user_interface.lua'

function _init()
  player = Player:New()
  interface = UserInterface:New()
end

function _update()
  if btn(0) then
    player.x-=1
    player.IsFlipped=true
  end
  if btn(1) then
    player.x+=1
    player.IsFlipped=false
  end
  if btn(2) then
    player.y-=1
  end
  if btn(3) then
    player.y+=1
  end
end

function _draw()
  cls() 
  map()  
  -- desenhar jogador
  player:Draw()
  -- desenhar gui
  interface:Draw()  
end
