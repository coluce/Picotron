-- Definindo a "classe" Player
Player={}

function Player:New(x, y)
	local obj = {
		x = x or 120,
		y = y or 120,
      SpriteId=16,
      IsFlipped=false		
	}
	setmetatable(obj, self)
	self.__index = self
	return obj
end

-- Desenhando em tela
function Player:Draw()
  spr(self.SpriteId, self.x, self.y, self.IsFlipped)
  camera(self.x - 120, self.y - 120)
end

