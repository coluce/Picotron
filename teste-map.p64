--[[pod_format="raw",created="2025-01-17 10:35:48",modified="2025-06-28 21:59:28",revision=170]]
function _init()
  Pos={
    -- posicao do desenho em tela
    ScreenX=0,
    ScreenY=0,

    -- quadro inicial do mapa
    StartMapX=1,
    StartMapY=1,
    
    -- quadro final do mapa
    StopMapX=1,
    StopMapY=1
  }
end

function _update()
  if btn(0) then -- baixo
    Pos.ScreenX-=1
  end
  if btn(1) then -- cima
    Pos.ScreenX+=1
  end
  if btn(2) then -- esquerda
    Pos.ScreenY-=1
  end
  if btn(3) then -- direita
    Pos.ScreenY+=1
  end
  
  if btnp(4) then -- x
    Pos.StopMapX+=1
    Pos.StopMapY+=1    
  end
  if btnp(5) then -- c
    Pos.StopMapX-=1
    Pos.StopMapY-=1    
  end  
end

function _draw()
  -- limpar a tela
  cls()
  
   -- desenhar o mapa
  map(
    Pos.StartMapX,
    Pos.StartMapY, 
    Pos.ScreenX, 
    Pos.ScreenY, 
    Pos.StopMapX, 
    Pos.StopMapY
  )
end
